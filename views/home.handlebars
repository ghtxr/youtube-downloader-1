
<main class="d-flex flex-column m-5">
  <form action="/format" method="get" class="Box col-10 col-sm-5 col-md-4 col-lg-3 mx-auto my-5">
    <div class="Box-body">
      <h3 class="f2-light">YouTube Video</h3>
      <div class="form-group">
        <div class="form-group-header">
          <label for="url">YouTube Video ID/Link:</label>
        </div>
        <div class="form-group-body">
          <input id="url" name="url" type="text" placeholder="https://www.youtube.com/watch?v=xxx" class="form-control" autocomplete="off" required>
        </div>
      </div>

      <button type="submit" class="btn btn-primary btn-block">
        {{ octicon 'chevron-right' 'current-color' 16 16 }}
        <span>Download</span>
      </button>

    
    </div>
  </form>

  <hr class="col-6 mx-auto my-5">

  
</main>
